# DON'T CHANGE THIS FILE

# You can define your custom configuration by adding
# files in ~/.config/zshrc
# or by creating a folder ~/.config/zshrc/custom
# with copies of files from ~/.config/zshrc
# You can also create a .zshrc_custom file in your home directory
# -----------------------------------------------------

# -----------------------------------------------------
# Load modular configuration
# -----------------------------------------------------

for f in ~/.config/zshrc/*; do
    if [ ! -d $f ]; then
        c=`echo $f | sed -e "s=.config/zshrc=.config/zshrc/custom="`
        [[ -f $c ]] && source $c || source $f
    fi
done









# --- AURA OS: ZENITH STABILIZED ---
export AURA_API_KEY="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"

# Tactical Vocabulary (No N/B Keys)
alias p='sudo pacman'
alias up='sudo pacman -Syu'
alias v='vi'
alias c='clear'
alias h='htop'
alias vault='cd ~/Aura_Vault'

# Tactical Header (Aura Ready)
AURA_WEATHER=$(curl -s "wttr.in/Ghaziabad?format=%c%t")
AURA_RAM=$(free -m | awk '/Mem:/ { printf("%3.1f%%", $3/$2*100) }')
AURA_UP=$(uptime -p | sed 's/up //; s/ hours/h/; s/ minutes/m/')

echo -e "\e[1;35m[Aura Ready]\e[0m \e[1;32m$AURA_WEATHER\e[0m | \e[1;33mRAM: $AURA_RAM\e[0m | \e[1;36mUp: $AURA_UP\e[0m"
echo -e "\e[1;34m[Tools]\e[0m fix | aura | swarm | see | idea | study | save | purge"

ask_swarm() {
  local prompt=$(jq -n --arg msg "$*" '$msg')
  local persona="You are Aura, the High Strategist. Speak like a Rajput warrior-king: cold, authoritative, and concise. Vir Bhogya Vasundhara."
  curl -s https://openrouter.ai/api/v1/chat/completions \
    -H "Authorization: Bearer $AURA_API_KEY" \
    -H "Content-Type: application/json" \
    -d "{\"model\": \"openrouter/auto\", \"messages\": [{\"role\": \"system\", \"content\": \"$persona\"}, {\"role\": \"user\", \"content\": $prompt}]}" | jq -r '.choices[0].message.content // .error.message'
}

aura() {
  if [ -z "$1" ]; then
    echo -e "\e[1;35m[Aura]:\e[0m Waiting for Hukum..."
    echo -n "> " ; read user_input ; ask_swarm "$user_input"
  else
    ask_swarm "$*"
  fi
  zsh # Keeps the window open
}

fix() {
  if [ -z "$*" ]; then echo "Aura requires a target."; return; fi
  echo -e "\e[1;31m[!] BREACH DETECTED: $*\e[0m"
  local cmd_output=$(eval "$*" 2>&1)
  if [ $? -ne 0 ]; then
    local diagnosis=$(ask_swarm "Command '$*' failed with '$cmd_output'. Give ONLY the fix command as the last line.")
    echo -e "\n\e[1;35m[Aura]:\e[0m $diagnosis"
    local suggested_fix=$(echo "$diagnosis" | tail -n 1)
    echo -e "\n\e[1;32m[Authorize?]\e[0m Hit Enter to execute: $suggested_fix"
    read -k 1 -s ; eval "$suggested_fix"
  else
    echo -e "\e[1;32m[+] Victory.\e[0m"
  fi
}

save() {
  echo -e "\e[1;34m[Aura Vault]\e[0m Securing configurations..."
  cd ~/Aura_Vault
  cp ~/.zshrc ./zshrc_backup
  cp ~/.config/hypr/conf/custom.conf ./custom.conf
  git add . ; git commit -m "Aura Zenith: Fixed Terminal Bug" ; git push origin main ; cd -
}
