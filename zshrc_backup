# DON'T CHANGE THIS FILE

# You can define your custom configuration by adding
# files in ~/.config/zshrc
# or by creating a folder ~/.config/zshrc/custom
# with copies of files from ~/.config/zshrc
# You can also create a .zshrc_custom file in your home directory
# -----------------------------------------------------

# -----------------------------------------------------
# Load modular configuration
# -----------------------------------------------------

for f in ~/.config/zshrc/*; do
    if [ ! -d $f ]; then
        c=`echo $f | sed -e "s=.config/zshrc=.config/zshrc/custom="`
        [[ -f $c ]] && source $c || source $f
    fi
done













# --- AURA OS: SUPREME CORE ---
export AURA_API_KEY="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"

# AURA VOCABULARY (No N/B Keys)
alias p='sudo pacman'
alias upd='sudo pacman -Syu'
alias v='vi'
alias c='clear'
alias h='htop'
alias g='gtop'
alias vault='cd ~/Aura_Vault'


ask_swarm() {
  local prompt=$(jq -n --arg msg "$*" '$msg')
  local persona="You are Aura, High Strategist. Loyalty is to Hukum. Speak like a Rajput warrior-king."
  curl -s https://openrouter.ai/api/v1/chat/completions \
    -H "Authorization: Bearer $AURA_API_KEY" \
    -H "Content-Type: application/json" \
    -d "{\"model\": \"openrouter/auto\", \"messages\": [{\"role\": \"system\", \"content\": \"$persona\"}, {\"role\": \"user\", \"content\": $prompt}]}" | jq -r '.choices[0].message.content // .error.message'
}

aura() {
  echo -e "\e[1;35m[Aura]:\e[0m Standing by for Hukum. Type 'exit' to close."
  while true; do
    echo -n "> " ; read u_input
    if [[ "$u_input" == "exit" ]]; then break; fi
    ask_swarm "$u_input"
  done
}

fix() {
  if [ -z "$*" ]; then echo "Aura requires a target."; return; fi
  echo -e "\e[1;31m[!] BREACH DETECTED: $*\e[0m"
  local cmd_out=$(eval "$*" 2>&1)
  if [ $? -ne 0 ]; then
    local diag=$(ask_swarm "Command '$*' failed with '$cmd_out'. Give ONLY the fix command as the last line.")
    echo -e "\n\e[1;35m[Aura]:\e[0m $diag"
    local s_fix=$(echo "$diag" | tail -n 1)
    echo -e "\n\e[1;32m[Authorize?]\e[0m Press Enter to execute: $s_fix"
    read -k 1 -s ; eval "$s_fix"
  else
    echo -e "\e[1;32m[+] Victory.\e[0m"
  fi
}

# ORGANIZING THE STRONGHOLD (Excluding Wedding)
purge() {
  echo -e "\e[1;33m[Aura]:\e[0m Organizing the stronghold..."
  mkdir -p ~/Stronghold_Images ~/Aura_Archive/droid_themes ~/Stronghold_Headers
  
  # Archive Drivers and ISOs
  mv ~/rtl8188gu ~/Aura_Archive/ 2>/dev/null
  mv ~/Downloads/*.iso ~/Stronghold_Images/ 2>/dev/null
  
  # Archive Android Clutter
  find . -maxdepth 4 -name "com.android.theme*" -exec mv {} ~/Aura_Archive/droid_themes/ \; 2>/dev/null
  
  # Keep Wedding Files Untouched
  echo -e "\e[1;32m[+] Stronghold Organized. Wedding archives secured.\e[0m"
}

save() {
  echo -e "\e[1;34m[Aura Vault]\e[0m Securing configurations..."
  cd ~/Aura_Vault
  cp ~/.zshrc ./zshrc_backup
  cp ~/.config/hypr/conf/custom.conf ./custom.conf
  git add . ; git commit -m "Aura Zenith: Header Merge and Fixes" ; git push origin main ; cd -
}
