# --- AURA STABLE SWARM CORE ---
ask_swarm() {
  local prompt="$*"
  # Direct simple call to OpenRouter Auto-Router
  curl -s https://openrouter.ai/api/v1/chat/completions \
    -H "Authorization: Bearer $AURA_API_KEY" \
    -H "Content-Type: application/json" \
    -d "{
      \"model\": \"openrouter/auto\",
      \"messages\": [{\"role\": \"user\", \"content\": \"$prompt\"}]
    }" | jq -r '.choices[0].message.content // .error.message'
}

alias aura='ask_swarm "Aura OS Status Check: All systems nominal."'

fix() {
  echo -e "\e[1;35m[Aura Swarm]\e[0m Executing: $*"
  local cmd_output
  cmd_output=$(eval "$*" 2>&1)
  local status=$?

  if [ $status -ne 0 ]; then
    echo -e "\e[1;31m[!] Error Detected.\e[0m Analyzing logs..."
    local diagnosis=$(ask_swarm "Command '$*' failed with '$cmd_output'. Briefly explain why and give ONLY the fix command as the last line.")
    echo -e "\e[1;36m[Analyst]\e[0m $diagnosis"
    
    # Self-Heal Trigger
    local suggested_fix=$(echo "$diagnosis" | tail -n 1)
    echo -e "\e[1;33m[Self-Heal]\e[0m Press Enter to execute: $suggested_fix (or Ctrl+C to skip)"
    read
    eval "$suggested_fix"
  else
    echo -e "\e[1;32m[+] Success.\e[0m"
    echo "$cmd_output"
  fi
}
